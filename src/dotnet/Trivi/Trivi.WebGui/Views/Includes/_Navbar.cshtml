@inject Trivi.Lib.Services.Contracts.IAuthService AuthService

@{
    var loggedIn = AuthService.IsClientLoggedIn()?.Data ?? false;
}


<nav class="navbar navbar-expand-lg bg-body-secondary">
    <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main-navbar" aria-controls="main-navbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="main-navbar">

            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="/app">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/app/collections">Collections</a>
                </li>
            </ul>

            <ul class="navbar-nav mb-2 mb-lg-0">
                <li class="nav-item">
                    @if(loggedIn)
                    {
                        <a class="nav-link" href="/auth/logout">Log out</a>
                    }
                    else
                    {
                        <a class="nav-link" href="/auth/login">Log in</a>
                    }

                </li>
            </ul>

        </div>
    </div>
</nav>